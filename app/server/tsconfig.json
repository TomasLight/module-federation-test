{
  "references": [
    {
      "path": "../../libs/utils"
    }
  ],
  "compilerOptions": {
    "allowJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ES2015.Collection",
      "ES2019.Array"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "../dist",
    "plugins": [
      {
        "transform": "ts-nameof",
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es6"
  },
  "ts-node": {
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": false,
      "target": "esnext"
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
